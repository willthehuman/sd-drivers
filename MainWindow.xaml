            <Rectangle x:Name="BtnDpadUp" Height="22" Stroke="#FF0061FF" Width="18" StrokeThickness="2" Canvas.Left="80" Canvas.Top="91" HorizontalAlignment="Center" VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5" RadiusY="5" RadiusX="5"/>
            <Rectangle x:Name="BtnDpadDown" Height="22" Stroke="#FF0061FF" Width="18" StrokeThickness="2" Canvas.Left="80" Canvas.Top="133" HorizontalAlignment="Center" VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5" RadiusY="5" RadiusX="5"/>

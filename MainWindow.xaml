            <Rectangle x:Name="BtnMenu" Height="16" Stroke="#FF0061FF" Width="32" StrokeThickness="2" Canvas.Left="124" Canvas.Top="78" HorizontalAlignment="Center" VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5" RadiusY="7" RadiusX="7"/>
            <Rectangle x:Name="BtnOption" Height="16" Stroke="#FF0061FF" Width="30" StrokeThickness="2" Canvas.Left="845" Canvas.Top="78" HorizontalAlignment="Center" VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5" RadiusY="7" RadiusX="7"/>
            <Rectangle x:Name="BtnSteam" Height="21" Stroke="#FF0061FF" Width="50" StrokeThickness="2" Canvas.Left="168" Canvas.Top="311" HorizontalAlignment="Center" VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5" RadiusY="10" RadiusX="10"/>

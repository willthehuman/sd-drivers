            <Rectangle x:Name="BtnDpadLeft" Height="18" Stroke="#FF0061FF" Width="22" StrokeThickness="2" Canvas.Left="58" Canvas.Top="114" HorizontalAlignment="Center" VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5" RadiusY="5" RadiusX="5"/>

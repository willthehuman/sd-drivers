            <Ellipse x:Name="BtnRStickPress" Height="45" Stroke="#FF0061FF" Width="45" StrokeThickness="2" Canvas.Right="156" Canvas.Top="116" HorizontalAlignment="Center" VerticalAlignment="Center" Stretch="UniformToFill"/>
